{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    // 这可以对 `this` 上的数据属性进行更严格的推断
    "strict": false,
    "alwaysStrict": false,
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2015", "dom", "ESNext"],
    "strictFunctionTypes": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
  },

  "include": [
    "framework/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}